<h4 class='item_title'>
		<%= link_to item.title.titleize, item %>
</h4>
<section class="news_body">
<section class='time_posted'>
<small> Posted: <%= distance_of_time_in_words_to_now(item.publish_date) %> ago </small>
</section>
<section id='news_link'>
<%= raw truncate(item.body.dup, length: 500).gsub(/<[^p]*\.\.\./, "...") %>
</section>
<p> <%= link_to "Read full article", item %> </p>
</section>
