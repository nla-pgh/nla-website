<h3 id='news_title'>
		<%= item.title.titleize %>
</h3>
<div id="news_body">
<section id='time_posted'>
<small> Posted: <%= distance_of_time_in_words_to_now(item.publish_date) %> ago </small>
</section>
<section id='news_link'>
<%= truncate(item.body, length: 250).html_safe %>
<p> <%= link_to "Read full article", item %> </p>
</section>
</div>
