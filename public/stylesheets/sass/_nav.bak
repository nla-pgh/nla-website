
nav {

	$padding: 0.25em;

	position: relative;

	padding: {
		top: $padding;
		bottom: $padding;
	}

	ul {
		display: inline-block;
		list-style-type: none;

		padding: {
			top: $padding;
			bottom: $padding;
			left: 0;
			right: 0;
		}

		margin: 0;

		li {
			display: inline;
			margin: 0;

			padding: {
				top: $padding * 2;
				bottom: $padding * 2;
				left: $padding * 2;
				right: $padding * 2;
			}

			a {
				display: inline-block;
				color: $white;
				text-decoration: none;

				padding: 0;
				margin: 0;
			}

			ul {
				display: none;
				padding: none;
				margin: none;

				li {
					padding: none;
					margin: none;
				}
			}

			&:hover {
				background: #700000;

				ul {
					display: block;
					position: absolute;

					li {
						float: none;
						font-size: inherit;
						background: $red;
						width: 10em;

						&:hover {
							background: #700000;
						}
					}
				}
			}
		}
	}



}

